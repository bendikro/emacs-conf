# -*- mode: shell-script -*-

if [ -f ~/.emacs.d/bash/bash_funcs ]; then
    . ~/.emacs.d/bash/bash_funcs
fi

if [ -f ~/.emacs.d/bash/bashrc_git ]; then
    . ~/.emacs.d/bash/bashrc_git
fi

if [ -f ~/.emacs.d/bash/bashrc_extras_local ]; then
    . ~/.emacs.d/bash/bashrc_extras_local
fi

if [ -f ~/.emacs.d/bash/tmux_completion.sh ]; then
    . ~/.emacs.d/bash/tmux_completion.sh
fi

if [ -f ~/.emacs.d/bash/bash_alias ]; then
    . ~/.emacs.d/bash/bash_alias
fi

# Set up bash completion for git commands
if [ -f ~/.emacs.d/bash/zfs-completion.bash ]; then
    . ~/.emacs.d/bash/zfs-completion.bash
fi

# Add pymacs to PYTHONPATH
if [ -f ~/.emacs.d/bash/pypath_pymacs ]; then
    . ~/.emacs.d/bash/pypath_pymacs
fi


# Enable 256 colors
[ "$TERM" = xterm ] && export TERM=xterm-256color

# Set emacs as editor
export EDITOR=emacs

# Add the bin dir to PATH
export PATH=$PATH:~/.emacs.d/bin/

OS=`uname`

if [[ "$OS" == 'FreeBSD' ]]; then
    source /usr/local/share/bash-completion/bash_completion.sh
fi

if [ -f /etc/bash_completion ]; then
    . /etc/bash_completion
fi

# Add the cask bin to PATH
if [ -d $HOME/.cask/bin ]; then
    export PATH=$HOME/.cask/bin:$PATH
fi

# PYENV
if [[ $EUID -ne 0 ]] && [ -d "$HOME/.pyenv" ]; then
   export PYENV_ROOT="$HOME/.pyenv"
   export PATH="$PYENV_ROOT/bin:$PATH"
   eval "$(pyenv init -)"
else
   export PYENV_ROOT=""
fi
