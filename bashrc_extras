# Bind CTRL-del to delete forward word
bind '"\e[3;5~":kill-word'

# turn off displaying ^C when pressing CTRL-C in terminal.
stty -ctlecho

if [ -f /etc/bash_completion ]; then
    . /etc/bash_completion
fi

