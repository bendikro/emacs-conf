# -*- mode: shell-script -*-

# Add to ~/.bashrc
#if [ -f ~/.emacs.d/bashrc_extras ]; then
#    . ~/.emacs.d/bashrc_extras
#fi

if [ -f ~/.emacs.d/bash_funcs ]; then
    . ~/.emacs.d/bash_funcs
fi

if [ -f ~/.emacs.d/bashrc_git ]; then
    . ~/.emacs.d/bashrc_git
fi

if [ -f ~/.emacs.d/bashrc_extras_local ]; then
    . ~/.emacs.d/bashrc_extras_local
fi

# Clear screen properly
alias cl='printf "\033c"'
alias gkill="grep_kill"
alias nl='newlines'
alias sbsh='source ~/.bashrc'
alias em='emacs -nw'

# Only apply when we have a proper terminal
case "$TERM" in
    xterm*|rxvt*)
    # Bind CTRL-del to delete forward word
    bind '"\e[3;5~":kill-word'
    # turn off displaying ^C when pressing CTRL-C in terminal.
    stty -ctlecho
    ;;
esac

if [ -f /etc/bash_completion ]; then
    . /etc/bash_completion
fi

if [ -d $HOME/.cask/bin ]; then
    export PATH=$HOME/.cask/bin:$PATH
fi

# Add emacs python functions to PYTHONPATH
if [ -d $HOME/.emacs.d/site-py ]; then
    export PYTHONPATH=$PYTHONPATH:$HOME/.emacs.d/site-py
fi


