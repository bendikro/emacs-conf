# Clear screen properly
alias cl='printf "\033c"'
alias em='emacs -nw'

function grep_kill() {
	ret=`ps aux | grep $@`
	array=($ret);
	echo "Found: $ret"
	echo "Killing pid: ${array[1]}";
	kill -9 ${array[1]};
}

# Print the number of newlines in the shell
function newlines() {
    count=10
    if [ $# -eq 1 ]; then
        count=$1
    fi
    for ((c=1; c <= $count; c++)); do
        echo ""
    done
}

alias gkill="grep_kill"
alias nl='newlines'
alias sbsh='source ~/.bashrc'

